static void music(string conf){
    ifstream fin(conf.c_str());
    if(!fin){
        Error("No music config file!");
    }
    vector<string>filename;
    while(fin){
        string tmp;
        fin>>tmp;
        if(tmp=="")continue;
        filename.push_back(tmp);
    }
    for(int i=0;;++i){
        Mp3Player player;
        if(player.open(filename[i%filename.size()])){
            unisleep(5);
            continue;
        }
        player.play();
        player.close();
        unisleep(5);
    }
}

