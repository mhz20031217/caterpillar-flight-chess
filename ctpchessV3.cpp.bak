Chess* GameState::choose_candidate(vector<Chess*>&v){
    assert(v.size());
    Chess* ret=NULL;
    bool flag=0;
    Print("Choose a candidate to move.");
    this->gui_msg("Choose a candidate to move.");
    while(!flag){
        c_signal_allow(1);
        uniusleep(INTERVAL_USECOND);
        ret=c_data[1].chess;
        for(int i=0;i<v.size();++i){
            if(v[i]==ret){
                flag=1;
                Print("You chose candidate: "+itos(i));
                break;
            }
        }
    }
    return ret;
}
